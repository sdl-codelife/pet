<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.action.excludePattern" value="/static/.*?" />
    <package name="sdl"  extends="struts-default">
        <action name="login" class="com.sdl.action.AdminAction" method="login">
            <result name="admin">/views/admin/adminHome.jsp</result>
            <result name="user">/views/user/userHome.jsp</result>
            <result name="doctor">/views/doctor/doctorHome.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="logout" class="com.sdl.action.AdminAction" method="logout">
            <result name="success">/login.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="userinfo" class="com.sdl.action.AdminAction" method="userinfo">
            <result name="success">/views/admin/admin_info.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="updateUserInfo" class="com.sdl.action.AdminAction" method="updateUserInfo">
            <result type="chain" name="success">userinfo</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="updateUserPassword" class="com.sdl.action.AdminAction" method="updateUserPassword">
            <result type="redirect" name="success">/login.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="userlist" class="com.sdl.action.AdminAction" method="userlist">
            <result name="success">/views/admin/userlist.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="delUser" class="com.sdl.action.AdminAction" method="delUser">
            <result type="chain" name="success">userlist</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="toaddUser" class="com.sdl.action.AdminAction" method="toaddUser">
            <result name="success">/views/admin/addUser.jsp</result>
        </action>
        <action name="addUser" class="com.sdl.action.AdminAction" method="addUser">
            <result type="chain" name="success">userlist</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
    </package>

    <package name="pet" extends="struts-default">
        <action name="toaddPet" class="com.sdl.action.UserAction" method="toaddPet">
            <result name="success">/views/user/addPet.jsp</result>
            <result name="fail">/views/MyJsp.jsp</result>
        </action>
        <action name="addPet" class="com.sdl.action.UserAction" method="addPet">
            <result type="chain" name="success">petList</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="petList" class="com.sdl.action.UserAction" method="petList">
            <result name="success">/views/user/petlist.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="delPet" class="com.sdl.action.UserAction" method="delPet">
            <result type="chain" name="success">petList</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="toupdatePet" class="com.sdl.action.UserAction" method="toupdatePet">
            <result name="success">/views/user/updatePetinfo.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="updatePet" class="com.sdl.action.UserAction" method="updatePet">
            <result type="chain" name="success">petList</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="todescriptForm" class="com.sdl.action.UserAction" method="todescriptForm">
            <result name="success">/views/user/descriptForm.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="descriptForm" class="com.sdl.action.UserAction" method="descriptForm">
            <result type="chain" name="success">todescripted</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="todescripted" class="com.sdl.action.UserAction" method="todescripted">
            <result name="success">/views/user/descriptedForm.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="totreatdForm" class="com.sdl.action.UserAction" method="totreatdForm">
            <result name="success">/views/user/totreatdForm.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="treatdForm" class="com.sdl.action.UserAction" method="treatdForm">
            <result name="success">/views/user/treatdForm.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="deldescriptForm" class="com.sdl.action.UserAction" method="deldescriptForm">
            <result type="chain" name="success">todescripted</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
    </package>
    <package name="Doctor" extends="struts-default">
        <action name="getDescriptions" class="com.sdl.action.DoctorAction" method="getDescriptions">
            <result name="success">/views/doctor/description.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="totreated" class="com.sdl.action.DoctorAction" method="totreated">
            <result name="success">/views/doctor/treated.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="seeDescription" class="com.sdl.action.DoctorAction" method="seeDescription">
            <result type="chain" name="success">totreated</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="treated" class="com.sdl.action.DoctorAction" method="treated">
            <result name="success">/success.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
    </package>
</struts>