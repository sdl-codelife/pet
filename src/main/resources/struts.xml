<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.action.excludePattern" value="/static/.*?" />
    <package name="sdl"  extends="struts-default">

        <action name="login" class="com.sdl.action.UserAction" method="login">
            <result name="success">/admin/adminhome.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="userinfo" class="com.sdl.action.UserAction" method="userinfo">
            <result name="success">/admin/admin_info.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="updateUserInfo" class="com.sdl.action.UserAction" method="updateUserInfo">
            <result name="success">/admin/admin_info.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="updateUserPassword" class="com.sdl.action.UserAction" method="updateUserPassword">
            <result name="success">/admin/admin_info.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="userlist" class="com.sdl.action.UserAction" method="userlist">
            <result name="success">/admin/userlist.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
        <action name="delUser" class="com.sdl.action.UserAction" method="delUser">
            <result name="success">/admin/userlist.jsp</result>
            <result name="fail">/MyJsp.jsp</result>
        </action>
    </package>
</struts>